# ============================================
# Microservicio de Cuentas - Variables de Entorno
# ============================================
# Copiar este archivo como .env y ajustar valores según entorno
# Comando: cp .env.example .env
# ============================================

# Aplicación
NODE_ENV=development
PORT=3000

# Base de Datos MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3307
DB_USERNAME=root
DB_PASSWORD=root123
DB_DATABASE=cooperativa_cuentas
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Para Docker (usar nombres de contenedor)
# DB_HOST=mysql-cuentas
# DB_PORT=3306

# CORS (separar múltiples orígenes con coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Swagger
SWAGGER_ENABLED=true
